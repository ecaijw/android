<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jingwei.cai.luke.ImageActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/green"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="decode"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonLocal" />

    <Button
        android:text="decode"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLocal"
        android:layout_alignLeft="@+id/buttonLocal"
        android:layout_alignStart="@+id/buttonLocal"
        android:layout_marginTop="16dp"
        android:id="@+id/buttonWeb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="/sdcard/test/1.jpg"
        android:ems="10"
        android:layout_above="@+id/buttonWeb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextLocal"
        android:layout_toLeftOf="@+id/buttonLocal"
        android:layout_toStartOf="@+id/buttonLocal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="http image"
        android:ems="10"
        android:id="@+id/editTextWeb"
        android:layout_alignBottom="@+id/buttonWeb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonWeb"
        android:layout_toStartOf="@+id/buttonWeb" />

    <com.jingwei.cai.luke.TextListView
        android:id="@+id/listview"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/buttonWeb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
